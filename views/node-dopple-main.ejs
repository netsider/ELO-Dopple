<html>
<head>
<title>Celebrity Doppleganger App</title>
</head>
<body>
<center>
<% 
	function getRandomIntInclusive(min, max) {
		min = Math.ceil(min);
		max = Math.floor(max);
	return Math.floor(Math.random() * (max - min + 1)) + min; //The maximum is inclusive and the minimum is inclusive 
	};
	
	let photoPath  = "Dopples/Actress_Picture/";
	let imgHeight = 240;
	//let imgWidth = 240;
				
	let playerOne = newPlayers[0][0];
	let playerOneName = newPlayers[0][1];
	let playerOneScore = newPlayers[0][2];
	let playerOneELO = newPlayers[0][3];
	let playerOneAR = newPlayers[0][4];
	let playerOneImgWidth = playerOneAR * imgHeight;
	let playerOneImgHeight = imgHeight;
	console.log("Aspect Ratio: " + playerOneAR + "imgHeight" + imgHeight + " = " + playerOneImgWidth);
	console.log("playerOneImgWidth: " + playerOneImgWidth);
	
	let playerTwo = newPlayers[1][0];
	let playerTwoName = newPlayers[1][1];
	let playerTwoScore = newPlayers[0][2];
	let playerTwoELO = newPlayers[1][3];
	let playerTwoAR = newPlayers[1][4];
	let playerTwoImgWidth = playerTwoAR * imgHeight;
	let playerTwoImgHeight = imgHeight;
	console.log("Aspect Ratio: " + playerTwoAR + "imgHeight" + imgHeight + " = " + playerTwoImgWidth);
	console.log("playerTwoImgWidth: " + playerTwoImgWidth);
	
	let playerOneImage = photoPath + playerOne + ".jpg";
	let playerTwoImage = photoPath + playerTwo + ".jpg";
	
	// Array passed if Player One wins
	playerOneIsWinnerArray = [];
	playerOneIsWinnerArray[0] = playerOne;
	playerOneIsWinnerArray[1] = playerTwo;
	playerOneIsWinnerArray = JSON.stringify(playerOneIsWinnerArray);
	
	// Array passed if Player Two wins
	playerTwoIsWinnerArray = [];
	playerTwoIsWinnerArray[0] = playerTwo;
	playerTwoIsWinnerArray[1] = playerOne;
	playerTwoIsWinnerArray = JSON.stringify(playerTwoIsWinnerArray);
	
%>

<div style="width: 50%;">
	<h2>Here are <u><%= playerOneName %></u> and <u><%= playerTwoName %></u>.  They look alike sometimes.</h2>
	<p>There is a <%= playerOneELO %>% chance you will accurately identify and select the picture below of <%= playerOneName %> (and not <%= playerTwoName %>)*.</p>
	<p>Accordingly, there's a <%= playerTwoELO %>% chance the picture below of <%= playerTwoName %> will be mistaken for <%= playerOneName %>*.</p>
	<p>* = Percentages are based upon previous user input into this app.</p>
	<h2><strong>Choose which picture you think is <u><%= playerOneName %></u>:</strong></h2>
</div>

<%
const rando = getRandomIntInclusive(1, 2);
if(rando === 1){ // Randomize pictures
%>
	<div style="width: 50%; display: inline-block;"><img height="<%= playerOneImgHeight %>" width="<%= playerOneImgWidth %>" src="<%= playerOneImage %>" name="playerImage" value="<%= playerOneImage %>"><img height="<%= playerTwoImgHeight %>" width="<%= playerTwoImgWidth %>" src="<%= playerTwoImage %>" name="playerImage" value="<%= playerTwoImage %>"></div>
	<form action="/node-dopple-main" method="POST">
	<p><button type="submit" name="playerName" value="<%= playerOneIsWinnerArray %>"><%= playerOneName %> is on the left</button></p>
	<p><button type="submit" name="playerName" value="<%= playerTwoIsWinnerArray %>"><%= playerOneName %> is on the right</button></p>
	
<% }else{ %>
	<div style="width: 50%; display: inline-block;"><img height="<%= playerTwoImgHeight %>" width="<%= playerTwoImgWidth %>" src="<%= playerTwoImage %>" name="playerImage" value="<%= playerTwoImage %>"><img height="<%= playerOneImgHeight %>" width="<%= playerOneImgWidth %>" src="<%= playerOneImage %>" name="playerImage" value="<%= playerOneImage %>"></div>
	<form action="/node-dopple-main" method="POST">
	<p><button type="submit" name="playerName" value="<%= playerTwoIsWinnerArray %>"><%= playerOneName %> is on the left</button></p>
	<p><button type="submit" name="playerName" value="<%= playerOneIsWinnerArray %>"><%= playerOneName %> is on the right</button></p>
<% }; %>
		
</form>

<%
	if (Array.isArray(playerArray) && playerArray.length){ 
		console.log("Array NOT empty!");
	
		playerArray.forEach(function(currentArray){ %>
			<div id="scoreBoard">
				<p><strong>Last Round:</strong></p>
				<!-- <p>Winner: <%= currentArray.winner %></p> -->
				<!-- <p>Loser: <%= currentArray.loser %></p> -->
				<p>Winner Name: <%= currentArray.winnerName %></p>
				<p>Loser Name: <%= currentArray.loserName %></p>
				<p>Winner Old Score: <%= currentArray.winnerOldScore %></p>
				<p>Loser Old Score: <%= currentArray.loserOldScore %></p>
				<p>Winner New Score: <%= currentArray.winnerNewScore %></p>
				<p>Loser New Score: <%= currentArray.loserNewScore %></p>
				<p>Winner ELO (old): <%= currentArray.winnerELO %></p>
				<p>Loser ELO (old): <%= currentArray.loserELO %></p>
			</div>
	<%});
	}else{
		console.log("Array Empty!"); %>
	<%};
%>
</center>
</body>
</html>